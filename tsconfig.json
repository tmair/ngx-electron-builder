{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "strict": true,
    "rootDir": "src",
    "skipDefaultLibCheck": true,
    "inlineSourceMap": true,
    "sourceRoot": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "target": "es2016",
    "lib": [
      "es2017"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node"
    ],
  },
  "exclude": [
    "node_modules/**"
  ]
}
